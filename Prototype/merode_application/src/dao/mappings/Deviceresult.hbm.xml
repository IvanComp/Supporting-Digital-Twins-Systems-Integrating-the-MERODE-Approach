<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="dao.Deviceresult"
        table="HIB_DEVICERESULT"
        dynamic-update="false"
        dynamic-insert="false"
        discriminator-value="DeviceresultImpl"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.String"
        >
            <generator class="uuid.hex">
            </generator>
        </id>

        <discriminator
            column="class"
            type="string"
        />

        <many-to-one
            name="state"
            class="dao.DeviceresultState"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="DEVICERESULT_STATE_FK"
        />
        <property
            name="value" 
            type="java.lang.String"
            update="true"
            insert="true"
        >
            <column
                name="VALUE"
                sql-type="VARCHAR(256)"
            />
        </property>
        <property
            name="time" 
            type="java.lang.String"
            update="true"
            insert="true"
        >
            <column
                name="TIME"
                sql-type="VARCHAR(256)"
            />
        </property>
			 		<many-to-one
            name="deviceusage"
            class="dao.Deviceusage"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="DEVICEUSAGE_FK"
        />
        <subclass
            name="dao.DeviceresultImpl"
            dynamic-update="false"
            dynamic-insert="false"
            discriminator-value="DeviceresultImpl"
        >
        </subclass>

    </class>

</hibernate-mapping>
